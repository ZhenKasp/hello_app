<!DOCTYPE html>
<html>
  <head>
    <title>Hello</title>
    <%= csrf_meta_tags %>

    <!--
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    --!>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-bold"><%= link_to 'Hello/ME0VV', root_path %></h5>


<!-- drop-down menu--!>
      <% if current_user %>
        <div class="dropdown open">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false"> current_user.email
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <button class="dropdown-item" type="button"><%= link_to "Add post", new_post_path %></button>
            <button class="dropdown-item" type="button"><%= link_to "About", about_path %></button>
            <div class="dropdown-divider"></div>
            <button class="dropdown-item" type="button"><%= link_to "Log out", destroy_user_session_path, method: :delete %></button>
          </div>
        </div>
      <% else %>
      <span class="dropdown-item"><%= link_to "About", about_path %></span>
        <div class="dropdown open">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false"> Menu
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <button class="dropdown-item" type="button"><%= link_to 'Sign up', new_user_registration_path %></button>
          <div class="dropdown-divider"></div>
          <button class="dropdown-item" type="button"><%= link_to "About", about_path %></button>
        </div>
      </div>
      <% end %>

    </div>
    <div class='container'>
      <% if notice %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
